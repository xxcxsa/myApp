<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AksciiActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:layout_marginStart="173dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="173dp"
        android:gravity="center"
        android:text="MyBank"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="222dp"
        android:layout_height="104dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="73dp"
        android:gravity="center"
        android:text="Выберите криптавалюту: "
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="114dp"
        android:layout_height="527dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:id="@+id/bitcoin_coin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/bitcoin" />

        <ImageView
            android:id="@+id/doge_coin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/doge_coin" />

        <ImageView
            android:id="@+id/eth_coin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ethereum" />

        <ImageView
            android:id="@+id/tether_coin"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/tether" />

        <ImageView
            android:id="@+id/lite_coin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/lite_coin" />

        <ImageView
            android:id="@+id/tron_coin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/tron" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logOut"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toEndOf="@+id/akcii"
        app:srcCompat="@drawable/log_out" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/news"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/news"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_icon"
        app:srcCompat="@drawable/news" />

    <ImageView
        android:id="@+id/akcii"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/news"
        app:srcCompat="@drawable/action" />

    <ImageView
        android:id="@+id/convertValutes"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/akcii"
        app:srcCompat="@drawable/valutes" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="295dp"
        android:layout_height="529dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:id="@+id/text_bitcoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="- График цены BITCOIN"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_doge_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:text="- График цены DOGECOIN"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_eth_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- График цены ETH"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="42dp"/>

        <TextView
            android:id="@+id/text_teth_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- График цены TETH"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="42dp"/>

        <TextView
            android:id="@+id/text_lite_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- График цены LITECOIN"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="42dp"/>

        <TextView
            android:id="@+id/text_tron_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- График цены TRON"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="42dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>